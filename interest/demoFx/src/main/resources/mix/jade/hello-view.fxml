<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="mix.jade.controller.HelloController" onKeyPressed="#handleKeyPressed">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Your Label"/>
        <TextField fx:id="myTextField" promptText="这是占位符">
            <!--消息提示-->
            <tooltip>
                <Tooltip text="这是消息提示"/>
            </tooltip>
            <!--右键菜单-->
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem text="数据1" onAction="#handleRightAction1"/>
                        <MenuItem text="数据2" onAction="#handleRightAction2"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TextField>
    </HBox>
    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <Button text="切换页面" onAction="#changeScene"/>
</VBox>
