<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %level 将输出日志等级，比如INFO、ERROR等。-->
            <!-- %class 将输出日志发出的类的全名。-->
            <!-- %line 将输出日志发出的代码行号。-->
            <!-- %msg 将输出代码中指定的日志消息。-->
            <!-- %n 换行。-->
            <pattern>[%level] %class.%line -- %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>